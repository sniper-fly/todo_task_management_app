<% @tasks.each do |task| %>

  <div class="<%= task.is_outdated? ? "outdated-task" : "normal-task" %>">

  <h2 class="hoge"><%= task.title %></h2>
  <span><%= task.content %></span><br>
  <span>期限：<%= task.deadline %></span><br>
  <span>担当者：<%= task.user&.email %></span><br>
  <span>ステータス：<%= task.get_status_str %></span><br>
  <span><%= link_to '詳細', task, class: "btn btn-outline-secondary" %></span>
  <% if task.is_created_by?(current_user) %>
    <span><%= link_to '編集', edit_task_path(task), class: "btn btn-info text-black" %></span>
    <span><%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' } %></span>
  <% end %>

  </div>
<% end %>
