<div class="task-detail-plate">
  <div>
    <h1> <%= @task.title %> </h1>
    <div> <%= simple_format(@task.content) %> </div>
    <div> 期限： <%= @task.deadline %> </div>

    <% if local_assigns[:show] %>
      <div> 担当者： <%= @task.user&.email %> </div>
    <% end %>

    <div> ステータス： <%= @task.get_status_str %> </div>
    <%= link_to '一覧へ戻る', tasks_path, class: "btn btn-outline-secondary bg-white" %>

    <% if local_assigns[:show] %>
      <% if @task.is_created_by?(current_user) %>
        <%= link_to '編集', edit_task_path(@task), class: "btn btn-info text-black" %>
        <%= link_to 'アサイン', assign_task_path, class: "btn btn-success text-white" %>
      <% end %>
    <% end %>
  </div>
</div>
